<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:weightSum="1">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="@color/color3"
        android:textSize="17dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tvContext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Context"
        android:textColor="@color/color1"
        android:textSize="13dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imgDegree1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentStart="true" />


        <ImageView
            android:id="@+id/imgDegree2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_toEndOf="@+id/imgDegree1" />

        <ImageView
            android:id="@+id/imgDegree3"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_toEndOf="@+id/imgDegree2" />

        <TextView
            android:id="@+id/textDateBegin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/tvDateTime"
            android:text="a été crée "
            android:textColor="@color/color4.2" />

        <TextView
            android:id="@+id/tvDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_toStartOf="@+id/textDateAfter"
            android:text="Date Time"
            android:textColor="@color/color4.2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textDateAfter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="CEST "
            android:textColor="@color/color4.2" />
    </RelativeLayout>

</LinearLayout>