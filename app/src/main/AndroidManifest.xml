<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sncf.itif">

    <!-- Location PERMISSION (GPS & Nework) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!--Droit d'accès à l'Internet-->
    <uses-permission android:name="android.permission.INTERNET" />

    <!--Poiur connaitre la disponibilité de la connexion internet-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"

        android:largeHeap="true"
        android:hardwareAccelerated="false">
        <!-- two above parameters added to solve the problem of display large image-->

        <activity
            android:name="com.sncf.itif.MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sncf.itif.Services.Secteur.SecteurActivity"
            android:label="@string/secteur_title"
            android:parentActivityName="com.sncf.itif.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.sncf.itif.Services.Plan.PlanActivity"
            android:label="@string/plan_title"
            android:parentActivityName="com.sncf.itif.Services.Secteur.SecteurActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name="com.sncf.itif.Services.DetailPlan.DetailPlanActivity"
            android:label="@string/detail_title"
            android:parentActivityName="com.sncf.itif.Services.Plan.PlanActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="com.sncf.itif.Services.PlanIDF.WebViewCartoActivity"
            android:label="title web"
            android:parentActivityName="com.sncf.itif.Services.PlanIDF.WebViewCartoActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="com.sncf.itif.Services.PlanIDF.RATPplanIDFActivity"
            android:label="title Image"
            android:parentActivityName="com.sncf.itif.Services.PlanIDF.RATPplanIDFActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="com.sncf.itif.Services.SavedImages.SavedImageActivity"
            android:label="Plan enregistré"
            android:parentActivityName="com.sncf.itif.Services.SavedImages.SavedImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>
